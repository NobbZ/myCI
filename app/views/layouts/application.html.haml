!!!
%html
  %head
    %title MyCI
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    = link_to 'logout', logout_path, id: :logout, method: :delete

    - if flash[:notice]
      #flash#notice
        = flash[:notice]
    - if flash[:alert]
      #flash#alert
        = flash[:alert]

    = yield
